<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:alpha="0.85"
    android:background="@color/purple_200"
    tools:context=".MapActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.9"
        android:contentDescription="@string/space"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/space" />

    <SearchView
        android:id="@+id/search"
        android:layout_width="51dp"
        android:layout_height="50dp"
        android:background="#8003DAC5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:background="#CCFFFFFF"
        android:fontFamily="monospace"
        android:text="Type a keyword"
        android:textAlignment="textStart"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/bubble1"
        android:layout_width="128dp"
        android:layout_height="126dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="64dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        android:shape="oval"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/bubble_459842357437834567"
        tools:ignore="ImageContrastCheck,SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/bubble2"
        android:layout_width="128dp"
        android:layout_height="126dp"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="44dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        android:shape="oval"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bubble_459842357437834567"
        tools:ignore="ImageContrastCheck,SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/bubble3"
        android:layout_width="128dp"
        android:layout_height="126dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="332dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        android:shape="oval"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bubble_459842357437834567"
        tools:ignore="ImageContrastCheck,SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/bubble4"
        android:layout_width="128dp"
        android:layout_height="126dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="36dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        android:shape="oval"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bubble_459842357437834567"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/bubble5"
        android:layout_width="128dp"
        android:layout_height="126dp"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="96dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        android:shape="oval"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bubble_459842357437834567"
        tools:ignore="ImageContrastCheck,SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="30dp"
        android:text="post"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>